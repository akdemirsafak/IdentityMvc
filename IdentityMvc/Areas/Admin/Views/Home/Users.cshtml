@{
    ViewData["Title"] = "Users";
}
@model List<AdminModel.UserViewModel>

<div class="text-center">
    <h1 class="display-4">Kullanıcılar</h1>
</div>

@if (TempData["SuccessMessage"] is not null)
{
    <div class="alert alert-info" role="alert"> @TempData["SuccessMessage"] </div>
}


<table class="table table-striped">
    <thead>

    <th> Id </th>
    <th> UserName </th>
    <th> Email </th>
    <th> Roller </th>
    <th> Rol ata </th>
    <th> Kullanıcıyı Sil </th>
    <th> Şifreyi Değiştir </th>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td user-roles="@user.Id"></td>
            <td>
                <a class="btn btn-outline-primary" asp-controller="Role" asp-action="AssignRoleToUser" asp-route-userId="@user.Id"> Rolünü Düzenle </a>
            </td>
            <td>
                <form asp-action="DeleteUser" asp-route-userId="@user.Id">
                    <button type="submit"  class="btn btn-outline-danger">Sil</button>
                </form>
            </td>
                <td>
                    
                        <button type="submit" class="btn btn-outline-info">
                        <a asp-action="ResetUserPassword" class="text-info" asp-route-userId="@user.Id">Değiştir</a>
                    </button>
              
                </td>
        </tr>
    }
    </tbody>
</table>